<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Main"
    tools:context="com.example.ramesh.testplayer.Activity1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/TV_ACT1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Welcome to My application"
                android:textAlignment="center"
                android:textColor="#eef04111"
                android:textSize="40sp" />
            <ImageView
                android:id="@+id/IMview"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_below="@+id/TV_ACT1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_action_name" />
            <Button
                android:id="@+id/Btn_1"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/IMview"
                android:background="#eef04111"
                android:fontFamily="monospace"
                android:text="Google map"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:typeface="monospace" />
            <ImageView
                android:id="@+id/IMview1"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_below="@+id/Btn_1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_internet" />
            <Button
                android:id="@+id/Btn_2"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/IMview1"
                android:background="#2EFF18"
                android:text="Internet"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:typeface="monospace" />
            <Button
                android:id="@+id/Register_btn_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#0022ff"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
