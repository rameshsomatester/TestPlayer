<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30sp"
        android:text="Register to enjoy Benefits"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="#0022ff"/>

    <EditText
        android:id="@+id/EditUSer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30sp"
        android:textSize="14sp"
        android:inputType="textPersonName"
        android:text="Enter Username"
        android:textColor="#0022ff"
        android:layout_below="@+id/Register" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditUSer"
        android:padding="30sp"
        android:id="@+id/TV_password"
        android:text="Enter Password"
        android:textColor="#0022ff"
        android:textSize="14sp"
        android:clickable="true" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30sp"
        android:inputType="textPassword"
        android:layout_below="@+id/EditUSer"
        android:textSize="14sp"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Password"
        android:padding="30sp"
        android:text="@string/consent" />

    <Button
        android:id="@+id/Register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#0022ff"
        android:clickable="true"
        android:longClickable="true"
        />

    <TextView
        android:id="@+id/Confirmation"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:padding="30sp"
        android:text="confirmation here"
        android:textSize="14sp"
        android:textColor="#0022ff"
        android:layout_above="@+id/Register_btn" />


</RelativeLayout>
